<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/progressBarOfSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:visibility="invisible"
            android:indeterminate="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayoutOfSearch"
            android:padding="2dp"
            tools:context=".Controllers.MainActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEARCH CRITERIA:"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textAlignment="center"
                android:layout_marginTop="25dp"
                android:id="@+id/search_console_title"
                android:layout_below="@+id/welcome_text"/>

               <TextView
                android:id="@+id/textView_location_radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                   android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="35dp"
                android:text="Location Radius:"
                android:layout_below="@+id/search_console_title"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_location_radius"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@+id/textView_location_radius"/>

            <TextView
                android:id="@+id/textView_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="35dp"
                android:text="Age:"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_below="@+id/seekBar_location_radius"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_age"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@+id/textView_age"/>

            <TextView
                android:id="@+id/textView_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_marginStart="35dp"
                android:text="Gender:"
                android:layout_below="@+id/seekBar_age"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/textView_gender"
                android:layout_marginStart="35dp"
                android:id="@+id/radioButtonGroup_gender">
                <RadioButton android:id="@+id/radioButton_male"
                    android:layout_width="wrap_content"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_height="wrap_content"
                    android:text="Male"/>
                <RadioButton android:id="@+id/radioButton_female"
                    android:layout_width="wrap_content"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_height="wrap_content"
                    android:text="Female"/>
            </RadioGroup>

            <Button
                android:id="@+id/button_search_chatmate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/radioButtonGroup_gender"
                android:layout_marginTop="20dp"
                android:text="@string/search_chatmate_button" />

            <Button
                android:id="@+id/button_start_blinddate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/button_search_chatmate"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="@string/start_blind_date_button" />

<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/topics_recycler"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/button_start_blinddate"-->
<!--                android:scrollbars="vertical" />-->

        </RelativeLayout>
    </FrameLayout>


</ScrollView>