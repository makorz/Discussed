<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    >

    <LinearLayout
        android:id="@+id/blindChatLeft1Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/other_nr_1_blind_buble"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        tools:ignore="UselessParent"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userNameID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_weight="10"
                android:layout_marginEnd="12dp"
                android:minWidth="75dp"
                android:textStyle="bold"
                android:maxWidth="300dp"
                android:textColor="@color/teal_green_700" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top"
                android:src="@drawable/star_grade"
                android:id="@+id/is_message_grade_image"
                android:visibility="invisible"
                android:contentDescription="@string/content_description_icon_of_graded_message_chat_activity" />

        </LinearLayout>

        <TextView
            android:id="@+id/textOfMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:maxWidth="300dp"
            android:minWidth="75dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/dateOfMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:maxWidth="300dp"
            android:minWidth="75dp"
            android:textStyle="italic"
            android:textSize="12sp"
            android:textColor="@color/teal_green_700" />

    </LinearLayout>

    <CheckBox
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/wasGraded"
        android:visibility="invisible"
        android:checked="false"
        />

    <TextView
        android:id="@+id/messageID"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:maxWidth="300dp"
        android:textColor="@color/brown_500" />

</LinearLayout>