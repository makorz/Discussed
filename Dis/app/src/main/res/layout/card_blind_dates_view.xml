<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_blindDates"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="20dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/info_image_blindDates"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.0"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/host_name_blind_dates_text"
        android:layout_width="wrap_content"
        android:minWidth="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:layout_gravity="end"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/user1_name_blind_dates_text"
        android:minWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="45dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:layout_gravity="end"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/user2_name_blind_dates_text"
        android:minWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="65dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:layout_gravity="end"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/user3_name_blind_dates_text"
        android:minWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="85dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:layout_gravity="end"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/blindDatesID_text"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:visibility="invisible" />

</androidx.cardview.widget.CardView>